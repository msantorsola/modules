// TODO nf-core: Once you have added the required tests, please run the following command to build this file:
// nf-core modules test gametes/generatemodels
nextflow_process {

    name "Test Process GAMETES_GENERATEMODELS"
    script "../main.nf"
    process "GAMETES_GENERATEMODELS"

    tag "modules"
    tag "modules_nfcore"
    tag "gametes"
    tag "gametes/generatemodels"

    test("model - options") {


        when {
            process {
                """
                input[0] = [
                    [ id:'test' ], '0.2','TEST_OUT'
                    ]
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
                { assert snapshot(process.out.edm_scores).match() }
                { assert snapshot(process.out.oddsratio_scores).match() }
                { assert snapshot(process.out.models).match() }
               )
        }

    }

    test("model - stub") {

        options "-stub"
        when {
            process {
                """
                input[0] = [
                    [ id:'test' ], '0.2','TEST_OUT'
                    ]
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
                { assert snapshot(process.out.edm_scores).match() }
                { assert snapshot(process.out.oddsratio_scores).match() }
                { assert snapshot(process.out.models).match() }
               )
        }

    }

}
