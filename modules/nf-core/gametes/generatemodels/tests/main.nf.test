nextflow_process {

    name "Test Process GAMETES_GENERATEMODELS"
    script "../main.nf"
    process "GAMETES_GENERATEMODELS"

    tag "modules"
    tag "modules_nfcore"
    tag "gametes"
    tag "gametes/generatemodels"
    config "./nextflow.config"

    test("model") {


        when {
            process {
                """
                input[0] = [
                    [ id:'test' ], ['0.2']
                    ]
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
                { assert snapshot(process.out.edm_scores).match() }
                { assert snapshot(process.out.oddsratio_scores).match() }
                { assert snapshot(process.out.models).match() }
               )
        }

    }

    test("model - stub") {

        options "-stub"
        when {
            process {
                """
                input[0] = [
                    [ id:'test' ], ['0.2']
                    ]
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
                { assert snapshot(process.out.edm_scores).match() }
                { assert snapshot(process.out.oddsratio_scores).match() }
                { assert snapshot(process.out.models).match() }
               )
        }

    }

}

